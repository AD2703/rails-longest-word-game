<h1>START GAME!</h1>
<%@letters.sample(10).each do |letter|%>
<p id ="alphabetletter"><%= "#{letter}" %></p>
<%end %>
<br>
<br>
<form action="score" method= "post">
  <%= hidden_field_tag :letters_array, @letters %>
  <input id ="text" type="text" name="word">
  <input id ='btn' type="submit" value="Play">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
